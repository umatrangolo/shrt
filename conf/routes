# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /shrts                                  controllers.Shrts.index

# TODO move to an URL using a PathBindable
PUT     /shrts/:url                             controllers.Shrts.create(url: String)

GET     /shrts/:token                           controllers.Shrts.redirect(token: String)

DELETE  /shrts/:shrt                            controllers.Shrts.delete(shrt: String)

GET     /ping                                   controllers.Healthcheck.ping

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
